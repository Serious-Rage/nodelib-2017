{
  "name": "nodelib-2017",
  "version": "1.0.0",
  "description": "Node library template for 2017",
  "main": "index.js",
  "author": "Kristian Mandrup",
  "license": "MIT",
  "scripts": {
    "test": "xo && ava",
    "fix": "xo --fix",
    "watch": "npm-watch",
    "test:watch:debug": "DEBUG=ava:watcher npm test -- --watch --verbose"
  },
  "watch": {
    "test": {
      "patterns": [
        "src"
      ],
      "extensions": "js",
      "quiet": true
    }
  },
  "xo": {
    "esnext": true,
    "parser": "babel-eslint",
    "plugins": [
      "filenames"
    ],
    "rules": {
      "filenames/match-regex": [
        2,
        "^[a-z-\\.]+$",
        true
      ]
    }
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "ava-spec": "^1.0.1",
    "babel-eslint": "^7.1.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-latest-minimal": "^1.1.2",
    "babel-register": "^6.18.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-filenames": "^1.1.0",
    "npm-watch": "^0.1.6",
    "testdouble": "^1.9.0",
    "webpack": "^1.13.3",
    "webpack-node-externals": "^1.5.4",
    "xo": "^0.17.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "npm-run": "^4.1.0"
  }
}
